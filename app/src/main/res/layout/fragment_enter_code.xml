<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.EnterCodeFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_image"
        android:layout_width="66dp"
        android:layout_height="51dp"
        android:src="@drawable/ic_baseline_pin_24"
        android:contentDescription="register_image"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:text="Enter code"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        style="@style/smallText"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sms"
        android:textColor="@color/purple_200" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="20dp"
        app:cardCornerRadius="@dimen/horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_input_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/horizontal_margin"
                android:layout_marginTop="@dimen/vertical_margin"
                android:autofillHints="phone"
                android:gravity="center"
                android:hint="- - - - - -"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="@dimen/appPadding"
                android:textColor="@color/black"
                android:textSize="30sp">

            </EditText>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>