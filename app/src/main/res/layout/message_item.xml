<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp">


    <LinearLayout
        android:id="@+id/bloc_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:orientation="vertical"
        android:gravity="end"
        android:background="@drawable/bg_user_massage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chat_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/normal_text"
            tools:text="hello I'm Ivan"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/chat_user_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="6dp"
            android:textSize="12dp"
            tools:text="15:03"
            android:textColor="@color/whiteDark"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bloc_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:orientation="vertical"
        android:gravity="start"
        android:background="@drawable/bg_receiving_massage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chat_received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:textSize="@dimen/normal_text"
            tools:text="hello I'm Ivan"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/chat_received_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="6dp"
            android:textSize="12dp"
            tools:text="15:03"
            android:textColor="@color/whiteDark"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>